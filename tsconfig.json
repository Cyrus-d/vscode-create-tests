{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6",
      "DOM",
      "es2018.promise"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "exclude": [
    "out",
    ".vscode",
    ".vscode-test",
    "node_modules"
  ]
}